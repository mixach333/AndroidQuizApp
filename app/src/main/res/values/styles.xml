<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="roundedButtonBig">
        <item name="android:layout_width">250dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:elevation">4dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:textSize">25sp</item>
        <item name="android:backgroundTint">@color/primaryColor</item>
        <item name="cornerRadius">24dp</item>
    </style>

    <style name="roundedButtonSmallAsContent" parent="roundedButtonBig">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">@color/primaryLightColor</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:elevation">4dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="TextViewHeaderStyle">
        <item name="android:layout_margin">5dp</item>
        <item name="android:fontFamily">@font/roboto_light</item>
        <item name="android:padding">8dp</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Medium</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:elevation">4dp</item>
        <item name="android:background">@color/secondaryLightColor</item>
    </style>

    <style name="roundedButtonBigRedGrey" parent="roundedButtonBig">
        <item name="android:backgroundTint">@color/grey</item>

        <item name="android:textColor">@color/red</item>
    </style>

</resources>