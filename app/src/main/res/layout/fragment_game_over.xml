<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FBA4A4"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        tools:context=".ui.GameOverFragment">

        <ImageView
            android:layout_width="232dp"
            android:layout_height="372dp"
            android:layout_margin="20dp"
            android:src="@drawable/ic_baseline_sentiment_dissatisfied_24" />

        <TextView
            android:id="@+id/textView2"
            style="@style/TextViewHeaderStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="You've lost!" />

        <Button
            android:id="@+id/button2"
            style="@style/roundedButtonBigRedGrey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start a new game" />

    </LinearLayout>
</layout>